<h3> Global Posts </h3>

{{#if user.status}}
{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
  </div>   
{{else}}
  <p>No Jobs listed</p>
{{/each}}
{{else}}
{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    
        <form method="post" action="/ideas/global/{{id}}/{{title}}">
        <input type="submit" class="btn btn-block btn-primary" value="Apply">
    </form>  
  </div>    
{{else}}
  <p>No Jobs listed</p>
{{/each}}
{{/if}}