{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
    <form method="post" action="/ideas/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block mb-2" value="Delete">
    </form>
    <a class="btn btn-success btn-block mb-2" href="/ideas/viewapplicants/{{id}}">View Applicants</a>
  </div>
{{else}}
  <p>No video ideas listed</p>
{{/each}}